{{ define "footer" }}
<footer>
    <div class="footer-content">
        <div class="about-text">
            <h3>{{ t "footer.about_title" }}</h3>
            <p>{{ t "footer.about_text" }}</p>
        </div>
        <div class="footer-links">
            <ul>
                <li><a href="https://developers.tosdr.org/dev/">{{ t "footer.links.api" }}</a></li>
                <li><a href="/{{ .Lang }}/about">{{ t "footer.links.about" }}</a></li>
                <li><a href="/{{.Lang}}/contact">{{ t "footer.links.contact" }}</a></li>
                <li><a href="/{{ .Lang }}/sites/legal">{{ t "footer.links.privacy" }}</a></li>
                <li><a href="/{{ .Lang }}/sites/legal">{{ t "footer.links.terms" }}</a></li>
                <li><a href="https://to.tosdr.org/branding">{{ t "footer.links.branding" }}</a></li>
                <li><a href="/{{ .Lang }}/thanks">{{ t "footer.links.thanks" }}</a></li>
                <li><a href="https://translate.tosdr.org">{{ t "footer.links.localize" }}</a></li>
            </ul>
        </div>
    </div>
    <div class="language-selector">
        <select onchange="window.location.href=this.value">
            {{ range $code, $name := .Languages }}
                <option value="{{ langURL $code }}" {{ if eq $.Lang $code }}selected{{ end }}>
                    {{ $name }}
                </option>
            {{ end }}
        </select>
    </div>
